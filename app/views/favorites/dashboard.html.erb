<div  class="container-fluid" >
  <div class= "d-flex justify-content-left gap-2">
    <div class="mt-3" >
      <%= link_to root_path do %>
        <%= image_tag "home.png", height: 30, width: 30, class:"home-icon" %>
      <% end %>
    </div>
  </div>
  <h1 class = "pt-3 my-3" >Hi, </h1>
  <h2 class = "mb-3">Your saved recipes:</h2>
  <br>
  <br>
  <br>
  <br>
  <% @favorite_recipes.each do |favorite| %>
    <%= link_to favorite.recipe do %>
    <div class="card-product mb-3">
      <%= cl_image_tag favorite.recipe.photo.key, height: 500, width: 500, crop: :fill %>
      <div class="card-product-infos">
        <h2><%= favorite.recipe.name %></h2>
        <p><%= favorite.recipe.minutes %> Min. </p>
        <p><%= favorite.recipe.nutritional_info %></p>
      </div>
    </div>
  <% end  %>
  <% end %>
</div>
