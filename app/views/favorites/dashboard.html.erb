<div  class="container-fluid" >
  <div class= "d-flex justify-content-left gap-2">
    <div class="mt-3" >
      <%= link_to root_path do %>
        <%= image_tag "home.png", height: 20, width: 20 %>
      <% end %>
    </div>
  </div>
  <h1 class = "pt-3 my-3" >Hi, </h1>
  <h2 class = "mb-3">Your saved recipes:</h2>
  <% @favorite_recipes.each do |favorite| %>
    <div class="card-product mb-3">
      <%= cl_image_tag favorite.recipe.photo.key, height: 500, width: 500, crop: :fill %>
      <div class="card-product-infos">
        <h2>
          <%= link_to favorite.recipe.name, recipe_path(favorite.recipe), class: "text-decoration-none" %>
        </h2>
        <p><%= favorite.recipe.description %></p>
      </div>
    </div>
  <% end %>
</div>
