        <%= cl_image_tag favorite.recipe.photo.key, height: 500, width: 500, crop: :fill %>
      <% end %>
    </ol>
  <div class="card-product">
    <img src="https://preview.redd.it/64pzpiawjyg71.png?auto=webp&s=93b686e7fd4da66cb011918e4c157c94604f2e83" />
    <div class="card-product-infos">
