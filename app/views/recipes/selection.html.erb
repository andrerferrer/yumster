<div class="container" >
  <div class= "col-sm-12">
    <div class= "d-flex justify-content-center gap-2">
      <div class="product-img">
       <div  class="d-flex justify-content-between">
          <%= link_to root_path do %>
            <%= image_tag "home.png", height: 20, width: 20 %>
          <% end %>
          <% if @favorite.nil? %>
            <%= link_to recipe_favorites_path(@recipe), method: :post do %>
              <%= image_tag "ribbon1.png", height: 20, width: 25 %>
            <% end %>
         <% else %>
          <%= link_to favorite_path(@favorite), method: :delete do %>
            <%= image_tag "ribbon.png", height: 20, width: 25 %>
          <% end %>
         <% end %>
        </div>
        <%= cl_image_tag @recipe.photo.key, height: 400, width: 500, crop: :fill %>

        <div class= "recipe-info">
          <div  class="d-flex justify-content-center">
            <%= "⏰: #{@recipe.minutes}" %>
            <%= "📝: #{@recipe.nutritional_info}" %>
          </div>
        </div>
        <h1 class= "text-center"><%= @recipe.name %></h1>
        <p class= "text-center"><%= @recipe.description %></p>

        <div class= "swipe-btn">
          <div class="d-flex justify-content-center align-center">
            <% if @recipe == Recipe.last %>
              <%= link_to selection_path(Recipe.first) do %>
                <%= image_tag "redx.png", height: 50, width: 50 %>
              <% end %>
            <% else %>
              <%= link_to selection_path(@recipe.id.next) do %>
                <%= image_tag "redx.png", height: 50, width: 50 %>
              <% end %>
            <% end %>
            <br>
            <br>
              <%= link_to recipe_path(@recipe) do %>
                <%= image_tag "yes.png", height: 50, width: 50 %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
