<div class="container" >

  <div  class="d-flex justify-content-between">

      <%= link_to "🏠", root_path %>

      <% if @favorite.nil? %>
        <%= link_to "⭐️", recipe_favorites_path(@recipe), method: :post %>
      <% else %>
        <%= link_to "🗑", favorite_path(@favorite), method: :delete %>
      <% end %>

  </div>

  <h1><%= @recipe.name %></h1>

  <div  class="d-flex justify-content-between">
    <%= "⏰: #{@recipe.minutes}" %>
    <%= "📝: #{@recipe.nutritional_info}" %>
  </div>

  <p><%= @recipe.description %></p>

  <div  class="d-flex justify-content-between">
    <% if @recipe == Recipe.last %>
      <%= link_to "❌", selection_path(Recipe.first) %>
    <% else %>
      <%= link_to "❌", selection_path(@recipe.id.next) %>
    <% end %>

    <%= link_to "✅", recipe_path(@recipe) %>
  </div>

</div>
